                    </ul>
                </div>
            </nav>
        </div>

        <div class="leftContainer" style="background-color: rgb(0,123,255);">
            <div class="profileText">
                <div class="imgApp">
                    <img src="@ViewData["PokemonPic"]" alt="Atos_Logo" width="50px" height="10%px" />
                </div>
                <h2>

                    @ViewData["nombre"]

                    <br>
                </h2>
            </div>
            <!-- } -->
            <div class="contactInfo">
                <h3 class="title">Contact Information</h3>
                <ul>

                    <li>
                        <span class="icon"><i class="fa fa-info" aria-hidden="true" style="color:white;"></i></span>
                        <span class="text"> ID Alumno: @ViewData["id"] </span> 
                    </li>
                    <li>
                        <span class="icon"><i class="fa fa-envelope-o" aria-hidden="true" style="color:white;"></i></span>
                        <span class="text">  Email: @ViewData["email"]</span>
                    </li>
                    <li>
                        <span class="icon"><i class="fa fa-info-circle" aria-hidden="true" style="color:white;"></i></span>
                        <span class="text">
                            Carrera: @ViewData["carrera"]
                        </span>
                    </li>

                </ul>
            </div>

            <div class="contactInfo education">

                <h3 class="title">Calificación Promedio</h3>
                <ul>
                    <li>
                        <span class="text">  Tu calificación promedio es de: @ViewData["promed"] </span>
                    </li>
                </ul>
                <!-- } -->
            </div>
        </div>

        <div class="rightContainer">
            <!-- Navbar -->


            <h2>¡<span style="color:#0894fc">Bienvenido</span>, Alumno!</h2>
            <p>Consulta las reseñas que se te han hecho.</p>

            <br>
            <a asp-page="/Resena"><button type="submit" class="btn btn-primary">Crear reseña</button></a>
            <br>
            <br />

            <table class="table table-bordered table-hover" id="myTab">
                <thead>
                    <tr>
                        <th>Calificación</th>
                        <th>Descripcion</th>
                        <!--<th>Promedio</th>
                <th>Carrera</th>
                <th>Reseñas</th> -->
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var item in Model.ListaResenias)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        </tr>
                    }
                </tbody>
            </table>

            <script>
                $(document).ready(function () {
                    $("#myTab").DataTable({
                        pageLength: 6,
                        lengthMenu: [[6, 10, 20, -1], [6, 10, 20, 'All']]
                    }
                    );
                });
            </script>


        </div>

