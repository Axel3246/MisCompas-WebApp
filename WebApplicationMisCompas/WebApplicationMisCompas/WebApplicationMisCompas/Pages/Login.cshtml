@page
@model WebApplicationMisCompas.Pages.LoginModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="/img/Login/favicon.png">
    <title>Sign In - MisCompas</title>

</head>

<style>

    body {
        background: #F3F5F7;
    }

    .mt-5 {
        margin-top: 6rem !important;
    }

    .bg {
        background-image: url(img/Login/ola.jpeg);
        background-position: center center;
    }
</style>

<body style="font-family: 'Poppins', sans-serif; font-size: 12px; font-weight: 300;">
    <div class="container w-75 h-50 bg-primary mt-5 rounded shadow">
        <div class="row align-items-lg-stretch">
            <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded">

            </div>
            <div class="col bg-white p-3 rounded-end">
                <div class="text-end">
                    <img src="/img/Login/mk.png" width="50" alt="logo">
                </div>
                <h2 style="margin-bottom: 1rem;"> Bienvenidos, <span style="color:#0894fc">misCompas</span></h2>

                <!-- Empieza el login del usuario -->
                <form method="post">

                    <div class="mb-4">
                        <label for="email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" name="email">
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" name="password">
                    </div>
                    <div class="mb-4" style="font-family: 'Poppins', sans-serif; font-size: 12px; font-weight: 300 !important;">

                    </div>
                    <div class="row">
                    
                        <div class="col-3"></div>
                        <div class="d-grid col-6">
                            <p style="text-align: center; color: red;">@ViewData["Mensaje"]</p>
                            <input class="btn btn-primary" type="submit" value="Iniciar Sesion" name="submit" id="Inicia">
</div>
                        <div class="col-3"></div>
                    </div>

                    <div class="my-3" style="text-align: center;">
                        <span>¿Sin cuenta?</span> <a href="#">Registrate aqui</a>
                    </div>
                </form>

                <!-- OAUTH Logins (Si es que alcanzamos) -->
                <div class="container w-100 my-4">
                    <div class="row text-center">
                        <div class="col-12" style="margin-top: -2rem; margin-bottom: 1rem;">
                            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-1 border-bottom"></div>
                            <span>Tambien puedes iniciar con</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <btn class="btn btn-outline-primary w-100 my-1">
                                <div class="row align-items-center">
                                    <div class="col-2 d-none d-md-block">
                                        <img src="/img/Login/tec.png" width="32" alt="tec">
                                    </div>
                                    <div class="col-10 text-center ">
                                        ITESM
                                    </div>
                                </div>
                        </div>
                        <div class="col">
                            <btn class="btn btn-outline-danger w-100 my-1">
                                <div class="row align-items-center">
                                    <div class="col-2">
                                        <img src="/img/Login/google.png" width="32" alt="tec">
                                    </div>
                                    <div class="col-10 text-center">
                                        Google
                                    </div>
                                </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
